.streammodal-body {
	padding: 0 25px 25px 25px;
}

.streammodal-header {
	padding: 25px 25px 15px 25px;
	text-align: right;
}

.streammodal-header, .streammodal-footer {
	border: 0;
}

.streammodal-header .close {
	float: none;
	margin: 0;
	font-size: 36px;
	color: #fff;
	font-weight: 300;
	text-shadow: none;
	opacity: 1;
}
